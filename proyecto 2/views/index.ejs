<%- include('template/head', { titleWeb: 'Inicio' , cssStyle: 'css/style.css' }) %>

    <%- include('template/navbar') %>

        <main class="container my-5">
            <h1 class="text-center mb-5 text-primary fw-bold">Dashboard Principal</h1>

            <% if (error) { %>
                <div class="alert alert-danger alert-dismissible fade show" role="alert">
                    <%= error %>
                        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                </div>
                <% } %>

                    <div class="row g-4 mb-5">
                        <!-- Card Autores -->
                        <div class="col-md-3 col-sm-6">
                            <div class="card shadow-sm border-primary h-100">
                                <div class="card-body d-flex align-items-center">
                                    <div class="me-3 display-4 text-primary">
                                        <i class="bi bi-people-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title text-primary">Autores Registrados</h5>
                                        <p class="card-text display-4 fw-bold mb-0">
                                            <%= totals.authors %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Categorías -->
                        <div class="col-md-3 col-sm-6">
                            <div class="card shadow-sm border-success h-100">
                                <div class="card-body d-flex align-items-center">
                                    <div class="me-3 display-4 text-success">
                                        <i class="bi bi-tags-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title text-success">Categorías</h5>
                                        <p class="card-text display-4 fw-bold mb-0">
                                            <%= totals.categories %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Editoriales -->
                        <div class="col-md-3 col-sm-6">
                            <div class="card shadow-sm border-warning h-100">
                                <div class="card-body d-flex align-items-center">
                                    <div class="me-3 display-4 text-warning">
                                        <i class="bi bi-building"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title text-warning">Editoriales</h5>
                                        <p class="card-text display-4 fw-bold mb-0">
                                            <%= totals.publishers %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>

                        <!-- Card Libros -->
                        <div class="col-md-3 col-sm-6">
                            <div class="card shadow-sm border-info h-100">
                                <div class="card-body d-flex align-items-center">
                                    <div class="me-3 display-4 text-info">
                                        <i class="bi bi-book-fill"></i>
                                    </div>
                                    <div>
                                        <h5 class="card-title text-info">Libros Registrados</h5>
                                        <p class="card-text display-4 fw-bold mb-0">
                                            <%= totals.books %>
                                        </p>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>

                    <hr class="my-5" />

                    <!-- Tabla libros recientes -->
                    <section>
                        <h2 class="mb-4 text-secondary">Libros Recientes</h2>
                        <div class="table-responsive shadow-sm rounded">
                            <table class="table table-striped table-hover align-middle">
                                <thead class="table-dark">
                                    <tr>
                                        <th>#</th>
                                        <th>Nombre</th>
                                        <th>Autor</th>
                                        <th>Categoría</th>
                                        <th>Editorial</th>
                                        <th>Año</th>
                                        <th>Estado</th>
                                    </tr>
                                </thead>
                                <tbody>
                                    <% if (recentBooks.length> 0) { %>
                                        <% recentBooks.forEach((book, index)=> { %>
                                            <tr>
                                                <td>
                                                    <%= index + 1 %>
                                                </td>
                                                <td>
                                                    <%= book.book_name %>
                                                </td>
                                                <td>
                                                    <%= book.author_name %>
                                                </td>
                                                <td>
                                                    <%= book.category_name %>
                                                </td>
                                                <td>
                                                    <%= book.publisher_name %>
                                                </td>
                                                <td>
                                                    <%= book.year_published || '—' %>
                                                </td>
                                                <td>
                                                    <% if (book.state===1) { %>
                                                        <span class="badge bg-success">Activo</span>
                                                        <% } else { %>
                                                            <span class="badge bg-secondary">Inactivo</span>
                                                            <% } %>
                                                </td>
                                            </tr>
                                            <% }); %>
                                                <% } else { %>
                                                    <tr>
                                                        <td colspan="7" class="text-center text-muted">No hay libros
                                                            recientes</td>
                                                    </tr>
                                                    <% } %>
                                </tbody>
                            </table>
                        </div>
                    </section>
        </main>

        </div>

        <%- include('template/footer') %>