<%- include('../template/head', { titleWeb: 'Autores' , cssStyle: 'css/style.css' }) %>

    <%- include('../template/navbar') %>

        <!-- Contenido principal -->
        <main class="content">
            <div class="container-fluid">

                <!-- Título de la página -->
                <div class="mb-4">
                    <h2>Gestión de Autores</h2>
                    <p class="text-muted">Consulta, agrega, edita o elimina autores fácilmente.</p>
                </div>

                <!-- Mensajes Flash -->
                <% if (messages.success) { %>
                    <div class="alert alert-success alert-dismissible fade show" role="alert">
                        <%- messages.success %>
                            <button type="button" class="btn-close" data-bs-dismiss="alert"
                                aria-label="Cerrar"></button>
                    </div>
                    <% } %>

                        <% if (messages.error) { %>
                            <div class="alert alert-danger alert-dismissible fade show" role="alert">
                                <%- messages.error %>
                                    <button type="button" class="btn-close" data-bs-dismiss="alert"
                                        aria-label="Cerrar"></button>
                            </div>
                            <% } %>

                                <!-- Tarjeta de autores -->
                                <div class="card shadow-sm">
                                    <div class="card-header d-flex justify-content-between align-items-center">
                                        <h5 class="mb-0">Lista de Autores</h5>
                                        <a class="btn btn-sm btn-primary" href="/authors/add">
                                            <i class="bi bi-plus-circle"></i> Agregar
                                        </a>
                                    </div>
                                    <div class="card-body">
                                        <% if (data.length) { %>
                                            <div class="table-responsive">
                                                <table class="table table-striped table-hover align-middle text-center">
                                                    <thead class="table-dark">
                                                        <tr>
                                                            <th>#</th>
                                                            <th>Nombre</th>
                                                            <th>Estado</th>
                                                            <th>Acciones</th>
                                                        </tr>
                                                    </thead>
                                                    <tbody>
                                                        <% data.forEach((author, i)=> { %>
                                                            <tr>
                                                                <th scope="row">
                                                                    <%= i + 1 %>
                                                                </th>
                                                                <td>
                                                                    <%= author.name %>
                                                                </td>
                                                                <td>
                                                                    <% if (author.state===1) { %>
                                                                        <span class="text-success fw-bold">
                                                                            <i class="bi bi-circle-fill"></i> Activo
                                                                        </span>
                                                                        <% } else { %>
                                                                            <span class="text-danger fw-bold">
                                                                                <i class="bi bi-circle-fill"></i>
                                                                                Inactivo
                                                                            </span>
                                                                            <% } %>
                                                                </td>
                                                                <td class="text-nowrap">
                                                                    <div
                                                                        class="d-flex flex-column flex-sm-row justify-content-center gap-1">
                                                                        <a class="btn btn-sm btn-success"
                                                                            href="/authors/edit/<%= author.id %>">
                                                                            <i class="bi bi-pencil"></i>
                                                                        </a>
                                                                        <a class="btn btn-sm btn-danger"
                                                                            href="/authors/delete/<%= author.id %>"
                                                                            onclick="return confirm('¿Estás seguro de que deseas eliminar este autor?')">
                                                                            <i class="bi bi-trash"></i>
                                                                        </a>
                                                                    </div>
                                                                </td>
                                                            </tr>
                                                            <% }) %>
                                                    </tbody>
                                                </table>
                                            </div>
                                            <% } else { %>
                                                <p class="text-center text-muted mb-0">No se encontraron autores.</p>
                                                <% } %>
                                    </div>

                                    <% if (totalPages> 1) {
                                        const maxPagesToShow = 5;
                                        let startPage = Math.max(currentPage - Math.floor(maxPagesToShow / 2), 1);
                                        let endPage = startPage + maxPagesToShow - 1;

                                        if (endPage > totalPages) {
                                        endPage = totalPages;
                                        startPage = Math.max(endPage - maxPagesToShow + 1, 1);
                                        }
                                        %>
                                        <nav aria-label="Paginación" class="mt-4">
                                            <ul class="pagination justify-content-center">

                                                <!-- Primera página -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link" href="/authors?page=1">«</a>
                                                </li>

                                                <!-- Página anterior -->
                                                <li class="page-item <%= currentPage === 1 ? 'disabled' : '' %>">
                                                    <a class="page-link"
                                                        href="/authors?page=<%= currentPage - 1 %>">‹</a>
                                                </li>

                                                <!-- Páginas numeradas -->
                                                <% for (let i=startPage; i <=endPage; i++) { %>
                                                    <li class="page-item <%= currentPage === i ? 'active' : '' %>">
                                                        <a class="page-link" href="/authors?page=<%= i %>">
                                                            <%= i %>
                                                        </a>
                                                    </li>
                                                    <% } %>

                                                        <!-- Página siguiente -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="/authors?page=<%= currentPage + 1 %>">›</a>
                                                        </li>

                                                        <!-- Última página -->
                                                        <li
                                                            class="page-item <%= currentPage === totalPages ? 'disabled' : '' %>">
                                                            <a class="page-link"
                                                                href="/authors?page=<%= totalPages %>">»</a>
                                                        </li>
                                            </ul>
                                        </nav>
                                        <% } %>

                                </div>

            </div>
        </main>

        </div>

        <%- include('../template/footer') %>